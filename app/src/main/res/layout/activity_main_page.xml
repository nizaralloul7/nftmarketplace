<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:background="@drawable/drawable_background_colored">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="8dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nftImage"
            android:adjustViewBounds="true"
            android:src="@drawable/hape" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainPicture"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Browse a\n modern NFT Marketplace"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/textLorem"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:text="Explore exclusive drops by the most in-demand creators, trade with other collectors in the Marketplace, and mint your own NFTs all in one place."
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLorem"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:id="@+id/registerButton"
                android:backgroundTint="@color/white"
                android:text="Register"
                android:layout_gravity="start"
                android:background="@drawable/drawable_button_radius_2"
                android:textSize="11dp"
                />
            <Button
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:id="@+id/signInButton"
                android:backgroundTint="@color/white"
                android:layout_gravity="end"
                android:text="Sign In"
                android:textSize="11dp"
                android:background="@drawable/drawable_button_radius_2"
                />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>